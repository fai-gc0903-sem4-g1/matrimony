<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>

		<property name="connection.url">jdbc:mysql://127.0.0.1/matrimony?useUnicode=true&amp;characterEncoding=utf8</property>
		<property name="connection.username">root</property>
		<property name="connection.password">1234</property>
		<property name="connection.pool_size">2</property>

		<property name="show_sql">false</property>
		<property name="hbm2ddl.auto">update</property>

		<mapping class="com.matrimony.entity.User" />
		<mapping class="com.matrimony.entity.Friend" />
		<mapping class="com.matrimony.entity.Transaction" />
		<mapping class="com.matrimony.entity.SocialNetwork" />
		<mapping class="com.matrimony.entity.FavoriteBook" />
		<mapping class="com.matrimony.entity.FavoriteMovie" />
		<mapping class="com.matrimony.entity.FavoriteFitness" />
		<mapping class="com.matrimony.entity.FavoriteMusic" />
		<mapping class="com.matrimony.entity.FavoriteTVShow" />
		<mapping class="com.matrimony.entity.UserPreference" />
		<mapping class="com.matrimony.entity.City" />
		<mapping class="com.matrimony.entity.Country" />
	</session-factory>
</hibernate-configuration>